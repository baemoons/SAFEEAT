<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="bottom"
        >
        <EditText
            android:layout_width="315dp"
            android:layout_height="43dp"
            android:hint="이름"
            android:layout_marginBottom="12dp"
            android:id="@+id/newName"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <EditText
                android:layout_width="240dp"
                android:layout_height="43dp"
                android:hint="아이디"
                android:layout_marginBottom="12dp"
                android:id="@+id/newId"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="중복확인"
                android:background="#ACD38D"
                android:id="@+id/btnCheckNewId"
                />
        </LinearLayout>
        <EditText
            android:layout_width="315dp"
            android:layout_height="43dp"
            android:hint="비밀번호"
            android:layout_marginBottom="12dp"
            android:id="@+id/newPw"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <EditText
                android:layout_width="240dp"
                android:layout_height="43dp"
                android:hint="비밀번호 확인"
                android:layout_marginBottom="12dp"
                android:id="@+id/checkNewpw"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="확인"
                android:background="#ACD38D"
                android:id="@+id/btnCheckNewpw"
                />
        </LinearLayout>
        <Button
            android:layout_width="315dp"
            android:layout_height="43dp"
            android:background="@drawable/btn_round"
            android:backgroundTint="#ACD38D"
            android:text="가입하기"
            android:id="@+id/newAccount"
            />
        />
        <View
            android:layout_marginTop="20dp"
            android:background="#000000"
            android:layout_width="315dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="top"
        android:layout_marginTop="12dp"
        >
        <Button
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:text="다른 계정으로 시작하기"
            android:background="@drawable/btn_round"
            android:layout_marginBottom="12dp"
            android:id="@+id/otherAccount"
            android:backgroundTint="#ACD38D"
            />
        <Button
            android:layout_width="315dp"
            android:layout_height="43dp"
            android:background="@drawable/btn_round"
            android:backgroundTint="#FFEB32"
            android:layout_marginBottom="12dp"
            android:text="카카오톡으로 가입하기"
            android:drawableLeft="@drawable/kakaotalk"
            android:paddingLeft="10dp"
            android:id="@+id/makeKakao"
            />
        <Button
            android:layout_width="315dp"
            android:layout_height="43dp"
            android:background="@drawable/btn_round"
            android:backgroundTint="#ffffff"
            android:text="구글로 가입하기"
            android:drawableLeft="@drawable/google"
            android:paddingLeft="10dp"
            android:id="@+id/makeGoogle"
            />
    </LinearLayout>
</LinearLayout>