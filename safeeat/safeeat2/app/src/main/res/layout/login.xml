<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:src="@drawable/logo"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        >
        <EditText
            android:id="@+id/myId"
            android:layout_width="315dp"
            android:layout_height="43dp"
            android:hint="ID"
            android:layout_marginBottom="12dp"
            />
        <EditText
            android:id="@+id/myPw"
            android:layout_width="315dp"
            android:layout_height="43dp"
            android:hint="PW"
            android:layout_marginBottom="12dp"
            />
        <Button
            android:id="@+id/login"
            android:layout_width="315dp"
            android:layout_height="43dp"
            android:background="@drawable/btn_round"
            android:backgroundTint="#FFACD38D"
            android:text="로그인"
            />
        <View
            android:layout_marginTop="50dp"
            android:background="#000000"
            android:layout_width="315dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            >
            <Button
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#ACD38D"
                android:text="계정찾기"
                android:background="#ffffff"
                android:id="@+id/findAccount"
                />
            <Button
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#ACD38D"
                android:text="회원가입"
                android:layout_marginBottom="12dp"
                android:background="#ffffff"
                android:id="@+id/makeAccount"
                />
        </LinearLayout>
        <Button
            android:layout_width="315dp"
            android:layout_height="43dp"
            android:text="카카오톡 시작"
            android:background="@drawable/btn_round"
            android:layout_marginBottom="12dp"
            android:drawableLeft="@drawable/kakaotalk"
            android:backgroundTint="#FFEB32"
            android:paddingLeft="10dp"
            android:id="@+id/startKakao"
            />
        <Button
            android:layout_width="315dp"
            android:layout_height="43dp"
            android:background="@drawable/btn_round"
            android:backgroundTint="#ffffff"
            android:text="구글 시작"
            android:drawableLeft="@drawable/google"
            android:paddingLeft="10dp"
            android:id="@+id/startGoogle"
            />
    </LinearLayout>
</LinearLayout>