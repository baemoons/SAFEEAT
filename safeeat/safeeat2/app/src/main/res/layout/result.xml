<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC1C1C1"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_marginBottom="10dp"
        >
        <Button
            android:background="#ffffff"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="◀"
            android:textSize="30dp"
            android:id="@+id/resultBack"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="결과"
            android:paddingLeft="110dp"
            android:textSize="30dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_marginBottom="20dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center_vertical"
            android:text="예상되는 음식"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginBottom="5dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:src="@drawable/examplefood"
                android:id="@+id/resultFoodphoto"
                />
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="햄버거, 샌드위치, ..."
                android:id="@+id/resultresultFoodname"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            >
            <Button
                android:layout_width="315dp"
                android:layout_height="43dp"
                android:background="@drawable/btn_round"
                android:backgroundTint="#ACD38D"
                android:text="자세히 보기"
                android:id="@+id/resultFoodmore"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_marginBottom="5dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center_vertical"
            android:text="예상되는 재료"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginBottom="5dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp"
            >
            <ImageView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:src="@drawable/examplechart"
                android:id="@+id/resultMaterialchart"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/resultMaterialname"
                android:text="새우 : 15%\n메밀 : 12%\n복숭아 : 3%\n달걀 : 1%\n토마토 : 0.3%"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            >
            <Button
                android:layout_width="315dp"
                android:layout_height="43dp"
                android:background="@drawable/btn_round"
                android:backgroundTint="#ACD38D"
                android:id="@+id/resultMaterialmore"
                android:text="자세히 보기"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="7dp"
        android:background="#ffffff"
        >
        <ImageButton
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:background="#ffffff"
            android:src="@drawable/cameron"
            />
        <ImageButton
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:background="#ffffff"
            android:src="@drawable/homeoff"
            android:id="@+id/resultHome"
            />
        <ImageButton
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:background="#ffffff"
            android:src="@drawable/myoff"
            android:id="@+id/resultMypage"
            />
    </LinearLayout>
</LinearLayout>